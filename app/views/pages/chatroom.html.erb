<div class="ttt">
  <h1><strong> Mailbox</strong></h1>
</div>

<hr class="featurette-divider">



<div class="container d-flex flex-column">
  <h3 class="text-center mt-4"><strong>Your Messages</strong></h3>
  <hr class="featurette-divider">
  <%  @activities.each do |activity| %>
    <div class="requests border border-white p-2 m-2 rounded d-flex bg-white">
      <div class="circle pe-8" style="width:80px; height:80px;">
      </div>
      <div class="d-flex flex-column ps-3">
        <div><strong> <%= activity.id  %></strong></div>
        <div> <%= activity.name %></div>
        <div class="pt-2">
          <a href="/activities/<%= activity.id %>/messages">
            <button class="button"> <strong>Chat</strong></button>
          </a>
        </div>
      </div>
    </div>
        <hr class="featurette-divider">
  <% end %>
</div>
