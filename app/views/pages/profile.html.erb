
    <div class="image-n-title pb-2">
      <h1 class="proheader">Profile</h1>
      <hr class="featurette-divider">
        <div class="profile-images-div">
          <% if @user.avatar.key == nil %>
            <img src="https://upload.wikimedia.org/wikipedia/commons/b/b5/Windows_10_Default_Profile_Picture.svg" alt="Profile icon" class="profile-pic" height="250">
          <% else %>
            <%= cl_image_tag @user.avatar.key, alt: "Profile icon", class:"profile-pic", height:"250" %>
          <% end %>
        </div>
    </div>
    <div class="personal-detailsss">

    <hr class="featurette-divider">
      <div class="container pb-1">

        <div class="user-informations d-flex justify-content-between">
          <div class="personal-details">
              <div class="details-title">
              <h3>Username</h3>
              </div>
              <div class="user-name">
                <h5><%= @user.username %></h5>
              </div>
              <hr class="featurette-divider">
              <div class="details-title">
                <h3>Full Name</h3>
              </div>
              <div class="full-name">
                <h5 class="first-name"><%= @user.first_name.capitalize %>  <%= @user.last_name.capitalize %></h5>
              </div>
              <hr class="featurette-divider">
              <div class="details-title">
                <h3>E-mail</h3>
              </div>
              <div class="user-mail">
                <h5><%= @user.email %></h5>
              </div>
              <hr class="featurette-divider">
              <div class="details-title">
                <h3>About Me</h3>
              </div>
              <div class="personal-details"><%= @user.about.capitalize %></div>
              <hr class="featurette-divider">

              <div class="d-flex">

                <div class="container-sm mb-3">
                <a href="/users/edit">
                  <button class="btn-edit pt-2 pb-2" id="edit-btn">Edit</button>
                </a>
                </div>
                <div class="container mb-3">
                  <button class="btn-log-out pt-2 pb-2"><%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %></button>
                </div>

              </div>

          </div>


        </div>
      </div>
    </div>

  <hr class="featurette-divider">
